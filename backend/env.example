# ==============================================================================
# UWaterloo Marketplace Backend Environment Configuration
# ==============================================================================

# ==============================================================================
# ENVIRONMENT SETTINGS
# ==============================================================================
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# MongoDB connection string
DB_URL=mongodb://localhost:27017/uwaterloo-marketplace
# Alternative for MongoDB Atlas:
# DB_URL=mongodb+srv://username:password@cluster.mongodb.net/uwaterloo-marketplace?retryWrites=true&w=majority

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================
# JWT secret key (use a strong, random string in production)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Session secret (use a strong, random string in production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ==============================================================================
# FIREBASE CONFIGURATION
# ==============================================================================
# Firebase Admin SDK credentials
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
# For development:
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email settings
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=UWaterloo Marketplace

# ==============================================================================
# FILE UPLOAD CONFIGURATION
# ==============================================================================
# Maximum file size (in bytes) - 5MB default
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=uploads

# ==============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ==============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================
# Application monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics (if needed)
GA_TRACKING_ID=GA-XXXXXXXXX

# ==============================================================================
# RATE LIMITING
# ==============================================================================
# Rate limit configurations (requests per window)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_UPLOAD=10

# ==============================================================================
# API KEYS & EXTERNAL SERVICES
# ==============================================================================
# Cloudinary (for image hosting)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# PayPal (for payments)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
# Set to 'live' for production

# Stripe (alternative payment processor)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==============================================================================
# ADMIN CONFIGURATION
# ==============================================================================
# IP addresses allowed for admin access (comma-separated)
ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.100

# Default admin credentials (change immediately after first setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-immediately

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_CACHING=true
ENABLE_ANALYTICS=true

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ==============================================================================
# SSL/TLS CONFIGURATION
# ==============================================================================
# SSL certificate paths (if using HTTPS)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ==============================================================================
# DEVELOPMENT SETTINGS (Remove in production)
# ==============================================================================
# These should only be used in development
DEBUG_MODE=false
VERBOSE_LOGGING=false 